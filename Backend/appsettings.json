{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Backend.Controllers.Payments": "Information",
        "Backend.Services": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/openradius-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/openradius-.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithEnvironmentName", "WithMachineName" ],
    "Properties": {
      "Application": "OpenRadius"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MasterConnection": "Host=localhost;Port=5432;Database=openradius_master;Username=admin;Password=admin123",
    "DefaultConnection": "Host=localhost;Port=5432;Database=openradius;Username=admin;Password=admin123"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:5174",
      "https://open-radius.org"
    ]
  },
  "Oidc": {
    "Authority": "http://localhost:8080/realms/openradius",
    "ClientId": "openradius-web",
    "ClientSecret": "",
    "RedirectUri": "http://localhost:5173",
    "PostLogoutRedirectUri": "http://localhost:5173",
    "ResponseType": "code",
    "Scope": "openid profile email",
    "MetadataAddress": "http://localhost:8080/realms/openradius/.well-known/openid-configuration",
    "RequireHttpsMetadata": false,
    "Issuer": "http://localhost:8080/realms/openradius",
    "Audience": "openradius-api",
    "ValidateAudience": false
  },
  "KeycloakAdmin": {
    "ClientId": "openradius-admin",
    "ClientSecret": "openradius-admin-secret-2026"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092"
  },
  "Debezium": {
    "ConnectUrl": "http://localhost:8083"
  },
  "Switch": {
    "DecryptionKey": "YOUR_SWITCH_DECRYPTION_KEY_HEX"
  }
}